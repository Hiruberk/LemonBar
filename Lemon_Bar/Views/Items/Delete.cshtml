@model Lemon_Bar.Models.Item

@{
    ViewData["Title"] = "Delete an item from your inventory";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>
        @Html.DisplayFor(model => model.ItemName)
    </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Item name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class="col-sm-2">
            Total cost
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalCost)
        </dd>
        <dt class="col-sm-2">
            Total amount in inventory
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)@Html.DisplayFor(model => model.Units)
        </dd>
    </dl>
    <form asp-action="Delete">
        @*<input type="text" asp-for="ItemName" />*@
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
